<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baground"
    tools:context=".Input_Name">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Name"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="100dp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Nama Anda"
            android:textSize="15sp"
            android:textColor="#B5000000"
            android:textStyle="bold"/>
    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bagroundtext"
        android:padding="10sp"
        android:textColor="#000"
        android:textColorHint="#878585"
        android:hint="Nama Anda"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_tampilnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bagroundtext"
            android:hint="Tampilkan"
            android:textColor="#000"
            android:textColorHint="#878585"
            android:padding="10sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_tampil"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bagroundbutton"
            android:text="Tampilkan"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>